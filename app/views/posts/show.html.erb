<p style="color: green"><%= notice %></p>

<%= render @post %>

<h2>Tasks</h2>
<ul>
  <% @post.tasks.each do |task| %>
    <li>
      <%= link_to task.name, post_task_path(@post, task) %> |
      <%= link_to "Edit", edit_post_task_path(@post, task) %> |
      <%= link_to "Destroy", post_task_path(@post, task), method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>

<div>
  <%= link_to "New Task", new_post_task_path(@post) %> |
  <%= link_to "Edit this post", edit_post_path(@post) %> |
  <%= link_to "Back to posts", posts_path %> |
  <%= button_to "Destroy this post", @post, method: :delete %>
</div>